<h1>I solemnly swear that I am up to no good</h1>

<div class="error"><%= flash["notice"] %></div>

<%= form_tag '/login' do %>
  <%= label_tag :username, "Username:" %>
  <%= text_field_tag :username %><br>
  <%= label_tag :password, "Password:" %>
  <%= password_field_tag :password %><br>
  <%= submit_tag "Login" %>
<% end %>

<p>Don't have an account? <%= link_to "Sign up here!", new_student_path %> </p>
