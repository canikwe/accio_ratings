<h1><%= @klass.instructor.name %> | <%= @klass.subject.name %> | <%= @klass.year  %></h1>

<table>
  <tr>
    <td>Overall</td>
    <td><%= @klass.average_overall %></td>
  </tr>
  <tr>
    <td>Difficulty</td>
    <td><%= @klass.average_diff %></td>
  </tr>
  <tr>
    <td>Intrigue</td>
    <td><%= @klass.average_intr %></td>
  </tr>
  <tr>
    <td>Would Recommend</td>
    <td><%= @klass.average_rec %></td>
  </tr>
</table>

<hr>
<h2>Submit a review for this class</h2>
<%= form_for @klass.reviews.build do |f| %>
<%= f.hidden_field :klass_id %>
<%= f.label :student_id %>
<%= f.collection_select :student_id, Student.all, :id, :full_name %><br><br>
<%= f.label :title, "Title:" %>
<%= f.text_field :title %><br><br>
<%= f.label :overall, "Overall:" %>
<%= f.select :overall, (1..5) %><br><br>
<%= f.label :difficulty, "Difficulty: (1 is least difficult)" %>
<%= f.select :difficulty, (1..5) %><br><br>
<%= f.label :intrigue, "Intrigue:" %>
<%= f.select :intrigue, (1..5) %><br><br>
<%= f.label :recomendation, "How likely are you to recomend to a classmate?" %>
<%= f.select :recommendation, (1..5) %><br><br>
<%= f.label :content, "Write your review:" %><br><br>
<%= f.text_area :content %><br><br>
<%= f.submit %>
<% end %>




<hr>
<h3>Reviews</h3>

<table>
  <tr>
    <th>Title</th>
    <th>Overall</th>
    <th>Difficulty</th>
    <th>Intrigue</th>
    <th>Would Recommend</th>
  </tr>
  <% @klass.reviews.each do |r| %>
    <tr>
      <td><%= link_to r.title, r %></td>
      <td><%= r.overall %></td>
      <td><%= r.difficulty %></td>
      <td><%= r.intrigue %></td>
      <td><%= r.recommendation %></td>
    </tr>
  <% end %>
</table>
