<h3>Reviews - Click to read more!</h3>

  <div class="list-group">

    <% @klass_reviews.each_with_index do |r, ind| %>

      <a href="<%= review_path(r) %>" class="list-group-item list-group-item-action">
        <strong><%= "#{r.student.full_name} -- #{r.title}" %></strong>
        <p></p>
          Overall: <%= r.overall %> |
          Difficulty:   <%= r.difficulty %> |
          Intrigue: <%= r.intrigue %> |
          Would Recommend?  <%= r.recommendation %>
          </a>
    <% end %>
    
  </div>
