<h1><%= @review.title %></h1>
<h2>By: <%= link_to @review.student.full_name, @review.student %></h2>
<h3><%= @review.klass.subject.name %>, <%= @review.klass.year %> with <%=@review.klass.instructor.name%></h3>

<ul>
  <li>Overall  <%= @review.overall %>/5</li>
  <li>Difficulty <%= @review.difficulty %>/5  (5 is most difficult)</li>
  <li>Intrigue <%= @review.intrigue %>/5</li>
  <li>Would recomend? <%= @review.recommendation %>/5</li>
</ul>
<p><%= @review.content %></p>

<% if @review.student.id == current_student.id %>
  <%= link_to "Edit Review", edit_review_path(@review)%> | <%= link_to "Delete Review", @review, method: :delete, data:{ confirm: 'Are you sure?'}%> |
<% else %>
<% end %>
<%= link_to "Back to Class", @review.klass %>
