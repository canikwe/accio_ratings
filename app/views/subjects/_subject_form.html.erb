<%= form_for @subject do |f| %>


<div class="row">

  <div class="col-sm-4">
    <%= f.label :name, "Name:"  %>
  </div>

  <div class="col-sm-3">
    <p>
    <%= f.text_field :name %>
    </p>
  </div>

</div>

<div class="row justify-content-center">


  <div class="row justify-content-center">
    <%= f.submit %>

  </div>
</div>
<% end %>
