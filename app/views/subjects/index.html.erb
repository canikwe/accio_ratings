<div class="container table-responsive">
  <h1>All Subjects </h1>

  <table class="table table-hover" id="index-tables">
    <tr>
      <th>Name</th>
      <th>Classes</th>
    </tr>
    <% @subjects.each do |s| %>
      <tr>
        <td><%= link_to s.name, s %></td>
        <td><%= s.klasses.count %></td>
      </tr>
    <% end %>
  </table>
  <span class="btn btn-light btn-md"><%= link_to "Create New Subject", new_subject_path %></span> 
</div>
