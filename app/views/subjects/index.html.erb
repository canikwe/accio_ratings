<div class="container table-responsive">
  <h1>All Subjects <span class="btn btn-light btn-sm"><%= link_to "Create New Subject", new_subject_path %></span> </h1>

  <table class="table table-hover">
    <tr>
      <th>Name</th>
      <th>Classes</th>
    </tr>
    <% @subjects.each do |s| %>
      <tr>
        <td><%= link_to s.name, s %></td>
        <td><%= s.klasses.count %></td>
      </tr>
    <% end %>
  </table>
</div>
