<div class="container table-responsive">
<h1>All Instructors <span class="btn btn-light btn-sm">
    <%= link_to "Create New Instructor", new_instructor_path %>
  </span></h1>

  <table class="table table-hover" id="index-tables">
    <tr>
      <th>Name</th>
      <th>Avg Class Rating</th>
    </tr>
    <% @instructors.each do |inst| %>
      <tr>
        <td><%= link_to inst.name, inst %></td>
        <% if inst.rating %>
        <td><%= inst.rating.round(2) %></td>
      <% else %>
        <td>--</td>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>
