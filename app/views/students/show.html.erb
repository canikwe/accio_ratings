<h1><%= @student.full_name %></h1>

Class of: <%= @student.grad_year %>

<h3>Reviews:</h3>

<table>
  <tr>
    <th>Title</th>
    <th>Teacher/Subject</th>
    <th>Overall Rating</th>
  </tr>
  <% @student.reviews.each do |r| %>
  <tr>
    <td><%= link_to r.title, review_path(r) %></td>
    <td><%= r.klass.instructor.name %>, <%= r.klass.subject.name %></td>
    <td><%= r.overall %>/5</td>
  </tr>
  <% end %>
</table><br>

<% if @student.id == current_student.id %>
  <%= link_to "Edit Profile", edit_student_path(@student)%> | <%= link_to "Delete Profile", @student, method: :delete, data:{ confirm: 'Are you sure?'}%> | <%= link_to "Logout", logout_path, method: :delete %>
<% else %>
<% end %>
