<div class="row">
  <div class="col">
    <%= render "shared/errors", input: @review %>
  </div>
</div>

<div class="row">
  <div class="col">
<%= form_for @review do |f| %>
  <%= f.hidden_field :klass_id %>
  <%= f.hidden_field :student_id, value: current_student.id %>
      <%= f.label :title, "Title:" %>
    </div>
    <div class="col">
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= f.label :overall, "Overall:" %>
    </div>
    <div class="col">
      <%= f.select :overall, (1..5) %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= f.label :difficulty, "Difficulty: (1 is least difficult)" %>
    </div>
    <div class="col">
      <%= f.select :difficulty, (1..5) %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= f.label :intrigue, "Intrigue:" %>
    </div>
    <div class="col">
      <%= f.select :intrigue, (1..5) %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= f.label :recomendation, "How likely are you to recomend to a classmate?" %>
    </div>
    <div class="col">
        <%= f.select :recommendation, (1..5) %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= f.label :content, "Write your review:" %><br>
      <%= f.text_area :content, size: "30x10" %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= f.submit %>
    </div>
<% end %>
</div>
